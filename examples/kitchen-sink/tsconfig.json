{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["expo/tsconfig.base", "@magic/tsconfig/base.json"],
  "compilerOptions": {
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "react-native-magic-modal": ["../../packages/modal/src"],
      "react-native-magic-modal/*": ["../../packages/modal/src/*"]
    },
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "android",
    "ios",
    "metro.config.js",
    "babel.config.js"
  ]
}
